<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:background="@android:color/transparent"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:elevation="0dp" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/status_card"
                layout="@layout/view_status_card" />

            <LinearLayout
                android:divider="@drawable/divider"
                android:showDividers="middle"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include
                    android:id="@+id/how_to_use"
                    layout="@layout/view_home_item" />

                <include
                    android:id="@+id/manage_apps"
                    layout="@layout/view_home_item" />

                <include
                    android:id="@+id/manage_templates"
                    layout="@layout/view_home_item" />

                <include
                    android:id="@+id/manage_presets"
                    layout="@layout/view_home_item" />

                <include
                    android:id="@+id/nav_logs"
                    layout="@layout/view_home_item" />

                <include
                    android:id="@+id/nav_settings"
                    layout="@layout/view_home_item" />

                <include
                    android:id="@+id/nav_about"
                    layout="@layout/view_home_item" />

            </LinearLayout>

            <com.google.android.material.button.MaterialButtonGroup
                style="@style/Widget.Material3.MaterialButtonGroup.Connected"
                android:layout_margin="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/backup_config"
                    app:icon="@drawable/outline_backup_24"
                    android:text="@string/home_backup_config"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/restore_config"
                    app:icon="@drawable/outline_settings_backup_restore_24"
                    android:text="@string/home_restore_config"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </com.google.android.material.button.MaterialButtonGroup>

        </LinearLayout>

    </ScrollView>

</LinearLayout>